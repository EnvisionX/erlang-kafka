#!/usr/bin/make -f
# -*- makefile -*-

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@

# Build the binary and docs.
override_dh_auto_build:
	$(MAKE) clean compile html

# Do not run any tests after the build
override_dh_auto_test:

# Implement staged installation
NAME = kafka
DESTDIR = debian/erlang-$(NAME)
VERSION = $(shell awk '{gsub("[()]","",$$2);print$$2;exit}' debian/changelog)
ERL_APP_DESTDIR = $(DESTDIR)/usr/lib/erlang/lib/$(NAME)-$(VERSION)/ebin
override_dh_install:
	install -m 755 -d $(ERL_APP_DESTDIR)
	install -m 644 ebin/*.app ebin/*.beam $(ERL_APP_DESTDIR)
	dh_install
